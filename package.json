{
  "name": "@ldesign/device",
  "version": "0.2.0",
  "private": true,
  "description": "Modern device detection library with modular architecture - Monorepo",
  "keywords": [
    "device",
    "detection",
    "responsive",
    "battery",
    "network",
    "vue3",
    "react",
    "solid",
    "typescript",
    "monorepo"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "build:all": "pnpm -r --filter './packages/**' build",
    "build:core": "pnpm --filter @ldesign/device-core build",
    "build:battery": "pnpm --filter @ldesign/device-battery build",
    "build:network": "pnpm --filter @ldesign/device-network build",
    "build:vue": "pnpm --filter @ldesign/device-vue build",
    "build:react": "pnpm --filter @ldesign/device-react build",
    "build:solid": "pnpm --filter @ldesign/device-solid build",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "clean": "pnpm -r --filter './packages/**' clean && rimraf es lib dist",
    "clean:all": "pnpm -r --filter './packages/**' exec rimraf node_modules && rimraf node_modules",
    "lint": "eslint . --fix",
    "lint:all": "pnpm -r --filter './packages/**' lint",
    "test": "vitest",
    "test:all": "pnpm -r --filter './packages/**' test:run",
    "type-check": "pnpm -r --filter './packages/**' type-check",
    "setup": "node scripts/setup-packages.js",
    "demo:core": "pnpm --filter @ldesign/device-core-example dev",
    "demo:battery": "pnpm --filter @ldesign/device-battery-example dev",
    "demo:network": "pnpm --filter @ldesign/device-network-example dev",
    "demo:vue": "pnpm --filter @ldesign/device-vue-example dev",
    "demo:react": "pnpm --filter @ldesign/device-react-example dev"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
