{
  "name": "@ldesign/device-solid",
  "version": "0.1.0",
  "description": "Solid.js adapter for device detection library",
  "keywords": [
    "solid",
    "solidjs",
    "device",
    "detection",
    "signals",
    "typescript"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./hooks": {
      "types": "./es/hooks/index.d.ts",
      "import": "./es/hooks/index.js",
      "require": "./lib/hooks/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "test": "vitest",
    "lint": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf es lib dist"
  },
  "dependencies": {
    "@ldesign/device-core": "workspace:*",
    "@ldesign/device-battery": "workspace:*",
    "@ldesign/device-network": "workspace:*"
  },
  "peerDependencies": {
    "solid-js": "^1.7.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:../../../../../../tools/builder",
    "@types/node": "^22.0.0",
    "eslint": "^9.18.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "solid-js": "^1.8.0"
  },
  "engines": {
    "node": ">=18"
  }
}

