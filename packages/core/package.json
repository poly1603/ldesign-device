{
  "name": "@ldesign/device-core",
  "version": "1.0.0",
  "description": "Framework-agnostic device detection core library with advanced features including device type detection, orientation monitoring, browser/OS parsing, and modular extension system",
  "keywords": [
    "device",
    "detection",
    "responsive",
    "battery",
    "network",
    "geolocation",
    "media",
    "framework-agnostic",
    "event-emitter",
    "typescript",
    "core",
    "modular"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./core": {
      "types": "./es/core/index.d.ts",
      "import": "./es/core/index.js",
      "require": "./lib/core/index.cjs"
    },
    "./core/*": {
      "types": "./es/core/*.d.ts",
      "import": "./es/core/*.js",
      "require": "./lib/core/*.cjs"
    },
    "./modules": {
      "types": "./es/modules/index.d.ts",
      "import": "./es/modules/index.js",
      "require": "./lib/modules/index.cjs"
    },
    "./modules/*": {
      "types": "./es/modules/*.d.ts",
      "import": "./es/modules/*.js",
      "require": "./lib/modules/*.cjs"
    },
    "./types": {
      "types": "./es/types/index.d.ts",
      "import": "./es/types/index.js",
      "require": "./lib/types/index.cjs"
    },
    "./types/*": {
      "types": "./es/types/*.d.ts",
      "import": "./es/types/*.js",
      "require": "./lib/types/*.cjs"
    },
    "./utils": {
      "types": "./es/utils/index.d.ts",
      "import": "./es/utils/index.js",
      "require": "./lib/utils/index.cjs"
    },
    "./utils/*": {
      "types": "./es/utils/*.d.ts",
      "import": "./es/utils/*.js",
      "require": "./lib/utils/*.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs",
    "build:watch": "ldesign-builder build -f esm,cjs --watch",
    "dev": "ldesign-builder build -f esm,cjs --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf es lib dist"
  },
  "dependencies": {
    "@ldesign/shared": "workspace:*",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.18.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.7.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}